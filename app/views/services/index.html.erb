<% service_header = ServiceHeader.first %>
<section class="header-section service-header px-0">
  <%= image_tag service_header.image, class: "service-header-img" if service_header.image? %>
  <div class="service-header-content">
    <%= service_header.title %>
  </div>
</section>

<section class="service-section" id="service-section">
  <div class="section-heading">
    <div>Bouquet of Services</div>
    <div>We cater all the major verticals</div>
  </div>
  <div class="service-card-container landing-page">
    <% @services.each do |service| %>
      <div class="service-card-div">
        <div class="overflow-hidden service-img-parent">
          <%= link_to service_path(service.slug) do %>
            <%= image_tag(service.image, class: "service-card-img") %>
          <% end %>
        </div>
        <div class="service-card-heading">
          <%= link_to service.title, service_path(service.slug) %>
        </div>
        <div class="service-card-content"><%= service.description %></div>
      </div>
    <% end %>
  </div>
</section>

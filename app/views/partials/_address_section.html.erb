<section class="address-section" id="address_section">
  <div class="inner-address-section">
    <div class="section-heading text-center">
      <div>Our Location</div>
      <div>GET In TOUCH with Team Innovis</div>
    </div>
    <div class="row mt-5 g-3 justify-content-center">
      <% Address.all.each do |address| %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-2 d-flex justify-content-center">
          <div class="address-div text-center">
            <div class="mb-2 fw-bold address-heading"><%= address.city %></div>
            <div class="address-text"><%= address.street %> <%= address.details %></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

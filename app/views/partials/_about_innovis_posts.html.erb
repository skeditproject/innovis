<section class="py-5 bg-light mt-4">
  <div class="container">
    <div class="text-center mb-5">
      <% team_section = InnovisPost.find_by(section_key: 'team_intro') %>
      <h2 class="display-4 font-weight-bold text-dark"><%= team_section&.title %></h2>
      <p class="text-muted mt-3 mx-auto" style="max-width: 800px;">
        <%= team_section&.content.html_safe %>
      </p>
    </div>

    <div class="row mb-4">
      <div class="col-12 col-md-6 d-flex align-items-center mb-4 mb-md-0">
        <% vision_section = InnovisPost.find_by(section_key: 'our_vision') %>
        <div class="w-100">
          <h3 class="h3 font-weight-bold text-dark mb-3"><%= vision_section&.title %></h3>
          <p class="text-muted">
            <%= vision_section&.content.html_safe %>
          </p>
        </div>
      </div>
      <div class="col-12 col-md-6 d-flex justify-content-center">
        <% if vision_section&.image.attached? %>
          <%= image_tag vision_section.image, alt: "Vision Image", class: "img-fluid rounded" %>
        <% end %>
      </div>
    </div>

    <div class="row mb-4">
      <div class="col-12 col-md-6 d-flex justify-content-center">
        <% content_section = InnovisPost.find_by(section_key: 'our_content') %>
        <% if content_section&.image.attached? %>
          <%= image_tag content_section.image, alt: "Content Image", class: "img-fluid rounded" %>
        <% end %>
      </div>
      <div class="col-12 col-md-6 d-flex align-items-center">
        <div class="w-100">
          <h3 class="h3 font-weight-bold text-dark mb-3"><%= content_section&.title %></h3>
          <p class="text-muted">
            <%= content_section&.content.html_safe %>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

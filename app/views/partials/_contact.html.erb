<div class="container m-5">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-12">
      <div class="card p-4 shadow border-0">
        <div class="card-body">
          <h2 class="card-title mb-4 text-center">Contact Us</h2>
          <h3 class="card-subtitle mb-4 text-muted text-center">Send Message</h3>

          <%= form_with model: @contact, url: send_message_path, local: true, html: { multipart: true, class: 'needs-validation', novalidate: true } do |form| %>
            <div class="form-group mb-3">
              <%= form.label :name, "Name", class: "form-label" %>
              <%= form.text_field :name, class: "form-control form-control-sm", placeholder: "Enter your name", required: true %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :email, "Email*", class: "form-label" %>
              <%= form.email_field :email, class: "form-control form-control-sm", placeholder: "Enter your email", required: true %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :message, "Message", class: "form-label" %>
              <%= form.text_area :message, class: "form-control form-control-sm", placeholder: "Enter your message", rows: 3, required: true %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :attachments, class: "form-label" do %>
                <i class="fas fa-paperclip me-2"></i> Attach Files
              <% end %>
              <%= form.file_field :attachments, multiple: true, class: "form-control form-control-sm" %>
              <small class="form-text text-muted">Attachments (0)</small>
            </div>

            <div class="form-group mb-3">
              <%= form.submit "Send", class: "btn btn-primary w-100" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
